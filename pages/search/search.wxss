/**index.wxss**/
.top-search {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 110rpx;
  background: #123a72;
  position: fixed;
  top: 0;
  left: 0;
}
.i-search {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 40rpx;
}
.search-input {
  background: #fff;
  height: 70rpx;
  font-size: 30rpx;
  width: 93%;
  padding-left: 70rpx;
  box-sizing: border-box;
}
.index-wrapper {
  height: 100%;
  padding-top: 110rpx;
  box-sizing: border-box;
  display: flex;
  width: 100%;
}
.result-list {
  width: 100%;
  padding-top: 115rpx;
}
.rb-name {
  font-size: 28rpx;
  color: #333;
}
.rb-type {
  font-size: 28rpx;
  border-radius: 30rpx;
  padding: 0 25rpx;
  background: #123a72;
  color: #fff;
}
.result-item {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx;
}
.result-item text {
  display: flex;
  height: 50rpx;
  line-height: 10rpx;
}

.rb-detail {
  padding-left: 20px;
  padding-right: 10px;
}
