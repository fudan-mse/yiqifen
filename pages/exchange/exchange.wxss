/**index.wxss**/

.tc {
  text-align: center;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333;
}

.usermotto {
  margin-top: 200px;
}
.jifen {
  width: 80%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-content: flex-start;
  justify-content: center;
  padding: 70rpx 0;
}
.jifen .yiqifen-wrapper {
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #ccc;
}
.jifen .account-wrapper {
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #ccc;
  padding: 30rpx 0;    
}
.jifen .account-wrapper .account-item {
  margin: 10rpx 0;
}

.jifen .exchange-action {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  background: #eceff0;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow:2px 2px 5px #333333;
}
.jifen .exchange-action .title {
  font-size: 40rpx;
  font-weight: bold;
}
.jifen .exchange-action .item {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: left;
}
.jifen .exchange-action input{
  display: inline-flex;
  background: #fff;
  height: 60rpx;
  width: 200rpx;
  margin: 0 10rpx;
  padding-left: 10rpx;
}
.change-btn {
  background: #123a72;
  color: #fff;
  width: 50%;
  margin-top: 30rpx;
}