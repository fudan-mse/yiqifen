/**index.wxss**/
.container.mine {
  background: #f6f6f6;
  justify-content: start;
}
.tc {
  text-align: center;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333;
}

.usermotto {
  margin-top: 200px;
}
.jifen {
  background: #fff;
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: center;
  padding: 70rpx 0;
}
.jifen .action-wrapper {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
.jifen .bind {
  display: flex;
  color: #fff;
  background: #123a72;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  box-sizing: border-box;
  margin: 0;
  margin-left: 30rpx;
}
.bind.has {
  background: #ccc;
  color: #333;
}
.order {
  background: #fff;
  margin-top: 20rpx;
}
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
  border-top: 1px solid #ccc;
}
.order-header .left {
  font-size: 30rpx;
}
.order-header .right {
  color: #666;
  font-size: 24rpx;
}
.order-type {
  width: 100%;
  display: flex;
  padding: 40rpx 0;
}
.order-type-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  flex-direction: column;
}
.order-type image{
  width: 60rpx;
  height: 60rpx;
}
.order-type text {
  font-size: 26rpx;
}
.address navigator{
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  margin-top: 30rpx;
  font-size: 30rpx;
  padding: 0 40rpx;
  background: #fff;
}