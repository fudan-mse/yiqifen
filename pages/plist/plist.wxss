.container.store-list {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  color: #fff;
}
.first-line {
  display: flex;
  width: 100%;
  flex:1;
  background-color: aquamarine;
}
.second-line {
  display: flex;
  width: 100%;
  flex: 1;
  background-color: bisque;
}
.left {
  flex: 1;
}
.right {
  flex: 1;
}
.first-line .left {
  background-color:rgba(18,58,114,.9);
}
.first-line .right {
  background-color:rgba(190,39,40,.9);
}
.second-line .left {
  background-color:rgba(190,39,40,.9);
}
.second-line .right {
  background-color:rgba(18,58,114,.9);
}